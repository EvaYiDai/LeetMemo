<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
        logicalFilePath="001-initial-schema.xml">

    <changeSet id="0" author="edai">
        <tagDatabase tag="v0"/>
    </changeSet>

    <changeSet id="1" author="edai">
        <comment>Initial implementation of enum types</comment>
        <sql>CREATE TYPE difficulty_enum AS ENUM ('Easy', 'Medium', 'Hard');</sql>
        <sql>CREATE TYPE tag_type_enum AS ENUM ('Topic', 'Company');</sql>
    </changeSet>

    <changeSet id="2" author="edai">
        <comment>Initial implementation of the database</comment>

        <createTable tableName="problems" remarks="Represents a LeetCode problem.">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="problem_pk"/>
            </column>

            <column name="number" type="integer">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="link" type="TEXT"/>
            <column name="difficulty" type="difficulty_enum">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="tags" remarks="Represents tags for problems. Tags can be either a category or a company name.">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="tag_pk"/>
            </column>

            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="type" type="tag_type_enum">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="problem_tags">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="problem_tag_pk"/>
            </column>

            <column name="problem_id" type="bigint">
                <constraints nullable="false" foreignKeyName="problem_id_fk" references="problems(id)"/>
            </column>
            <column name="tag_id" type="bigint">
                <constraints nullable="false" foreignKeyName="tag_id_fk" references="tags(id)"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="users" remarks="Represents a user of the app.">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="user_pk"/>
            </column>

            <column name="first_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="avatar_url" type="TEXT"/>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="problem_progresses">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="problem_progress_pk"/>
            </column>

            <column name="problem_id" type="bigint">
                <constraints nullable="false" foreignKeyName="problem_progress_problem_id_fk" references="problems(id)"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="problem_progress_user_id_fk" references="users(id)"/>
            </column>
            <column name="notes" type="TEXT"/>
            <column name="next_review" type="TIMESTAMP"/>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="entries">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="entry_pk"/>
            </column>

            <column name="problem_progress_id" type="bigint">
                <constraints nullable="false" foreignKeyName="entry_problem_progress_id_fk" references="problem_progresses(id)"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="confidence_scores">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="confidence_score_pk"/>
            </column>

            <column name="entry_id" type="bigint">
                <constraints nullable="false" foreignKeyName="confidence_score_entry_id_fk" references="entries(id)"/>
            </column>
            <column name="score" type="integer">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
